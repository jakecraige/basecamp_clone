<div class="row">
  <div class="span8">
  <h1><%= @project.title %></h1>
  <p id="notice"><%= notice %></p>

  <p>
    <b>Description:</b>
    <%= @project.description %>
  </p>
  <p>
    <b>Status:</b>
    <%= get_status(@project.status) %>
  </p>
  <p>
    <b>Due:</b>
    <%= @project.due %>
  </p>

  <%= link_to 'Edit', edit_project_path(@project) %> |
  <%= link_to 'Back', projects_path %>

  <%= render 'discussions' %>
  </div>
  <div class="span3 well">
  <%= render 'sidebar' %>
  </div>
</div> <!-- end row -->
