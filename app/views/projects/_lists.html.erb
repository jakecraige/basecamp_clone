<div class="block lists">
  <h2>Todo Lists</h2>
  <p><%= link_to "New List", new_list_path, class: "btn btn-success" %></p>
  <% if @lists.any? %>
    <% @lists.each do |list| %>
      <p><%= link_to list.title, list %> | 
              <%= list.tasks.count %> tasks</p>
    <% end %>
  <% else %>
    <p>No lists created yet...</p>
  <% end %>
</div>
