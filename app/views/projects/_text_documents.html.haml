.block.text_documents
  %h2 Text Documents
  = link_to "New Document",
    new_project_text_document_path(@project),
    class: "btn btn-success new-document-btn"

  - if @text_documents.any?
    %table.text_documents
    - @text_documents.each do |text_document|
      %tr
        %td= link_to text_document.title,
          project_text_document_path(text_document.project, text_document)
        %td
          by
          = link_name text_document.user
  - else
    %p No text documents just yet...
