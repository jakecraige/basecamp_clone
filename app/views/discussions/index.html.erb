<h1>Listing discussions</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Message</th>
    <th>Project</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @discussions.each do |discussion| %>
  <tr>
    <td><%= discussion.title %></td>
    <td><%= discussion.message %></td>
    <td><%= discussion.project_id %></td>
    <td><%= discussion.user_id %></td>
    <td><%= link_to 'Show', project_discussions_path %></td>
    <td><%= link_to 'Edit', edit_project_discussion_path(discussion.project_id, discussion) %></td>
    <td><%= link_to 'Destroy', project_discussions_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

